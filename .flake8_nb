[flake8_nb]
exclude =
    .git,
    **/__pycache__,
    **/.ipynb_checkpoints,
    **/.virtual_documents
max-line-length = 120

ignore =
    E402,
    # Variables such as 'In' or 'display' are not detected and variables of imported Jupyter Notebook cannot be detected
    F821

per-file-ignores =
    01-einfuehrung-in-toolbox\01 einfuehrung in python.ipynb: F403, F405
    05-weiterfuehrende-beispiele/maschinelles-sehen/gtsrb_image_database_loader.py: E722
